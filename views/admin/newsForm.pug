extends ../layout

block content
    h1= title
        if errors.errors!== undefined
            each message in errors.errors
                p=message

    form(method="post")
        p
            label title
            input(type="text" name="title")
        p
            label description
            textarea(name="description", cols="30", rows="10")
        p
            input(type="submit" value="zapisz")
        

